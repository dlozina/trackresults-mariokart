@model IEnumerable<MarioKartWeb.ViewModel.RaceViewModel>

@{
    ViewBag.Title = "Races";
}

<h2>Races</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                        <thead>
                            <tr>
                                <th style="width: center;">
                                    @Html.DisplayNameFor(model => model.RaceDate)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.TournamentName)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.GrandPrixName)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Driver)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Position)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Points)
                                </th>
                                <th style="text-align:center;">
                                    Edit
                                </th>
                                <th style="text-align:center;">
                                    Details
                                </th>
                                <th style="text-align:center;">
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="width:100px;">
                                    @Html.DisplayFor(model => item.RaceDate)
                                </td>
                                <td style="text-align:left;">
                                    @Html.DisplayFor(model => item.TournamentName)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.GrandPrixName)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.Driver)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.Position)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.Points)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                                </td>
                                <td>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataTables")
    <script>
        $(document).ready(function() {
            $('#DataTables_Table_0').DataTable();
        } );

    </script>
}
