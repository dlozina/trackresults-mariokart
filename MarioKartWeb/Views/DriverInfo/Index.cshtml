<div class="row" style="margin-top: 25px;">
    <div class="col-lg-4">
        <table class="table">
            <thead>
                <tr>
                    <th class="text-center" style="width: 200px">
                        Photo
                    </th>

                    <th class="text-center" style="width: 200px">
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th class="text-center" style="width: 200px">
                        Driver Details
                    </th>

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @if (item.ID == 1)
                        {
                            <img src="~/Content/Photos/Players/bLink.jpg" alt="Driver Photo">
                        }
                        @if (item.ID == 2)
                        {
                            <img src="~/Content/Photos/Players/bDonkey.jpg" alt="Driver Photo">
                        }
                        @if (item.ID == 3)
                        {
                            <img src="~/Content/Photos/Players/bTanooki.jpg" alt="Driver Photo">
                        }
                        @if (item.ID == 4)
                        {
                            <img src="~/Content/Photos/Players/bRoy.jpg" alt="Driver Photo">
                        }
                        @if (item.ID == 5)
                        {
                            <img src="~/Content/Photos/Players/bToad.jpg" alt="Driver Photo">
                        }
                    </td>

                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td class="text-center">
                        @Html.ActionLink("Details", "DriverDetails", new { id = item.ID }, new { @class = "btn btn-primary" })

                        @*<a href='@Html.Action("DriverDetails", new { id = item.ID })'>
                                <img src="~/Content/Photos/Players/Donkey.jpg" />
                                <img src="@Url.Content("~/Content/Photos/Players/Donkey.jpg")" />
                            </a>*@
                    </td>

                </tr>
            }

        </table>
    </div>
</div>
