}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Index", "Home") <span class="divider"></span></li>
    <li>Drivers Info</li>
</ul>

<div class="row">
    <div class="col-sm-12 text-center">
        <h2>Drivers 2020</h2>
    </div>
</div>

