@model MarioKartWeb.ViewModel.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MARIO KART TOURNAMENTS</h1>
    <hr class="my-4">
    <p class="lead">We are fast!</p>
    @Html.ActionLink("Learn More", "About", "Home", null, new { @class = "btn btn-success" })
</div>

<div class="row">
    <div class="col-md-6">
        <h2>@Html.DisplayFor(model => model.Title)</h2>
        <table>
            <tr>
                <th style="width:100px;">Name:</th>
                <td>@Html.DisplayFor(model => model.TournamentName)</td>
            </tr>
            <tr>
                <th style="width:100px;">Date:</th>
                <td>@Html.DisplayFor(model => model.TournamentDate)</td>
            </tr>
            <tr>
                <th style="width:100px;">Time:</th>
                <td>@Html.DisplayFor(model => model.TournamentTime)</td>
            </tr>
            <tr>
                <th style="width:100px;">Call Time:</th>
                <td>@Html.DisplayFor(model => model.TournamentCallTime)</td>
            </tr>
        </table>
    </div>

    <div class="col-md-6">
        <h2>Current driver positions</h2>
        <table>
            <tr>
                <th style="width:100px;">@Html.DisplayFor(model => model.FirstPosition)</th>
                <td><span class="label label-warning">LEADER</span></td>
            </tr>
               
            <tr>
                <th style="width:100px;">@Html.DisplayFor(model => model.SecondPosition)</th>
                <td><span class="label label-success">NO. 2</span></td>
            </tr>
                
            <tr>
                <th style="width:100px;">@Html.DisplayFor(model => model.ThirdPosition)</th>
                <td><span class="label label-success">NO. 3</span></td>
            </tr>
                
            <tr>
                <th style="width:100px;">@Html.DisplayFor(model => model.FourthPosition)</th>
                <td><span class="label label-success">NO. 4</span></td>
            </tr>
               
            <tr>
                <th style="width:100px;">@Html.DisplayFor(model => model.FifthPosition)</th>
                <td><span class="label label-success">NO. 5</span></td>
            </tr>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <h5>@Html.DisplayFor(model => model.NewsDate)</h5>
        <h2>@Html.DisplayFor(model => model.NewsTitle)</h2>
        @Html.Raw(System.Web.HttpUtility.HtmlDecode(Model.NewsStory))
    </div>
</div>
