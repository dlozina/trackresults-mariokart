@model IEnumerable<MarioKartWeb.ViewModel.DriverViewModel>

@{
    ViewBag.Title = "Drivers";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Drivers</h2>
        </div>
    </div>
    <div class="row" style="margin-top: 25px;">
        <div class="col-sm-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>

    <div class="row" style="margin-top: 25px;">
        <div class="col-lg-12">

            <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                <thead>
                    <tr>
                        <th style="text-align: center;">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.FavoriteTrack)
                        </th>
                        <th style="text-align:center;">
                            @Html.DisplayNameFor(model => model.FavoriteCar)
                        </th>
                        <th style="text-align:center; width:50px;">
                            Edit
                        </th>
                        <th style="text-align:center; width:50px;">
                            Details
                        </th>
                        <th style="text-align:center; width:50px;">
                            Delete
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; width:100px;">
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td style="text-align:center;">
                                @Html.DisplayFor(model => item.Description)
                            </td>
                            <td style="text-align:center; width:150px;">
                                @Html.DisplayFor(model => item.FavoriteTrack)
                            </td>
                            <td style="text-align:center; width:150px;">
                                @Html.DisplayFor(model => item.FavoriteCar)
                            </td>
                            <td style="text-align:center;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" })
                            </td>
                            <td style="text-align:center;">
                                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" })
                            </td>
                            <td style="text-align:center;">
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataTables")

    <script>
        $(document).ready(function () {
            $('#DataTables_Table_0').DataTable();
        });
    </script>
}