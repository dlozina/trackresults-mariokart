@model IEnumerable<MarioKartWeb.Models.Driver>

@{
    ViewBag.Title = "Drivers";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Drivers</h2>
        </div>
    </div>
    <div class="row" style="margin-top: 25px;">
        <div class="col-sm-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <div class="row" style="margin-top: 25px;">
        <div class="col-lg-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FavoriteTrack)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FavoriteCar)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FavoriteTrack)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FavoriteCar)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" }) -
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) -
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>