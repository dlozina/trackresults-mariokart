<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MK</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/dataTablesStyles")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="backgound" class="backgound">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MK", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Standings", "Index", "Standings")</li>
                    <li>@Html.ActionLink("Tournament Standings", "Index", "TournamentStandings")</li>
                    <li>@Html.ActionLink("Drivers Info", "Index", "DriverInfo")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Administrator
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>@Html.ActionLink("Add or Edit Races", "Index", "Races")</li>
                                <li>@Html.ActionLink("Add or Edit Tournament", "Index", "Tournaments")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Add or Edit Drivers", "Index", "Drivers")</li>
                                <li>@Html.ActionLink("Add or Edit Grand Prix List", "Index", "GrandPrixes")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Add New Administrator", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content whitebackground divborder topmarginallcontent">
        <div class="topmarginrendered">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mario Kart </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
