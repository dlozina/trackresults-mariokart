@model MarioKartWeb.ViewModel.StandingsIndexViewModel

@{
    ViewBag.Title = "Standings";
    var modelUI = new MarioKartWeb.ViewModel.StandingsViewModel();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Standings - Season 2020</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                        <thead>
                            <tr>
                                <th style="width: 20%;">
                                    @Html.DisplayNameFor(model => modelUI.Position)
                                </th>
                                <th style="text-align:left;">
                                    @Html.DisplayNameFor(model => modelUI.DriverName)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => modelUI.GrandPrixDriven)
                                </th>
                                <th style="text-align:center;">
                                    @Html.DisplayNameFor(model => modelUI.GrandPrixTotal)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => modelUI.WritersCorner)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => modelUI.Points)
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Standings)
                            {
                            <tr>
                                <td style="width:100px;">
                                    @Html.DisplayFor(model => item.Position)
                                </td>
                                <td style="text-align:left;">
                                    @Html.DisplayFor(model => item.DriverName)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.GrandPrixDriven)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.GrandPrixTotal)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.WritersCorner)
                                </td>
                                <td style="text-align:center; width:150px;">
                                    @Html.DisplayFor(model => item.Points)
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/dataTables")
    <script>
        $(document).ready(function() {
            $('#DataTables_Table_0').DataTable();
        } );

    </script>
}






